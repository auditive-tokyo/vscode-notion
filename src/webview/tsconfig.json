{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "outDir": "dist/webview",
    "lib": [
      "es2022",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "..",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true
  },
  "include": [
    "./index.tsx",
    "./hooks/**/*.tsx",
    "./components/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
