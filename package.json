{
  "name": "notion-vscode",
  "displayName": "Notion VSCode",
  "icon": "resources/notion-vscode.png",
  "version": "1.0.7",
  "description": "Browse Notion pages directly in Visual Studio Code with your Integration API key.",
  "categories": [
    "Other"
  ],
  "keywords": [
    "notion",
    "notion-database",
    "notion-api",
    "notion-client",
    "notion-integrations"
  ],
  "homepage": "https://github.com/auditive-tokyo/Notion-VSCode#readme",
  "bugs": {
    "url": "https://github.com/auditive-tokyo/Notion-VSCode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/auditive-tokyo/Notion-VSCode"
  },
  "license": "MIT",
  "publisher": "auditive-tokyo",
  "main": "./dist/extension.js",
  "scripts": {
    "typecheck": "tsc --noEmit && tsc --noEmit --project src/webview/tsconfig.json",
    "lint": "eslint . src/webview/",
    "lint:fix": "eslint . src/webview/ --fix",
    "build": "NODE_ENV=production webpack --mode production --config webpack.config.ts",
    "watch": "NODE_ENV=development webpack --watch --mode development --config webpack.config.ts",
    "package-extension": "vsce package --no-dependencies",
    "publish-extension": "vsce publish --no-dependencies"
  },
  "contributes": {
    "configuration": {
      "title": "VSCode Notion",
      "properties": {
        "notion.apiKey": {
          "type": "string",
          "description": "Your Notion API key (from https://www.notion.so/my-integrations)",
          "default": ""
        },
        "notion.rootPage": {
          "type": "string",
          "description": "Root page (Notion URL or 32-character ID) used to load the page tree",
          "default": ""
        },
        "notion.cacheTtlDays": {
          "type": "number",
          "description": "Cache TTL for Notion pages and page tree in days. Set to 0 to disable caching.",
          "default": 7,
          "minimum": 0
        }
      }
    },
    "commands": [
      {
        "category": "Notion",
        "command": "notion.openPage",
        "title": "Open Page",
        "icon": "$(add)"
      },
      {
        "category": "Notion",
        "command": "notion.refreshPage",
        "title": "Refresh Page",
        "icon": "$(extensions-refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notion-sidebar",
          "title": "Notion VSCode",
          "icon": "$(custom-icons-notion)"
        }
      ]
    },
    "views": {
      "notion-sidebar": [
        {
          "type": "tree",
          "id": "notion-hierarchy",
          "name": "Page Tree",
          "icon": "$(list-tree)",
          "contextualTitle": "Notion Page Tree",
          "visibility": "visible"
        }
      ]
    },
    "icons": {
      "custom-icons-notion": {
        "description": "notion",
        "default": {
          "fontPath": "resources/fonts/custom-icons.woff",
          "fontCharacter": "\\f101"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "notion.refreshPage",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "notion.openPage",
          "when": "notion:isReady && view == notion-hierarchy",
          "group": "navigation@1"
        },
        {
          "command": "notion.refreshPage",
          "when": "notion:isReady && view == notion-hierarchy",
          "group": "navigation@2"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "notion-hierarchy",
        "contents": "Loading...",
        "when": "!notion:isReady"
      },
      {
        "view": "notion-hierarchy",
        "contents": "Set your Notion API key and Root Page in settings to get started.\n[Open Settings](command:workbench.action.openSettings?%22notion%22)",
        "when": "notion:isReady && !config.notion.rootPage"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished",
    "onWebviewPanel:notion.pageView"
  ],
  "dependencies": {
    "@notionhq/client": "^5.9.0",
    "mermaid": "^11.12.2",
    "nanoid": "5",
    "notion-utils": "^7.7.3",
    "react": "^19.2.4",
    "react-calendar": "^6.0.0",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "rehype-raw": "^7.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "vedk": "^0.1.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@swc/core": "^1.15.11",
    "@swc/register": "^0.1.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "latest",
    "@types/dotenv-webpack": "^7.0.8",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.108.1",
    "@vscode/vsce": "^3.7.1",
    "autoprefixer": "^10.4.24",
    "css-loader": "^7.1.3",
    "dotenv-webpack": "^8.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "swc-loader": "^0.2.7",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "vscode": "^1.108.0"
  }
}